<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instructional_video_icon"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_weight=".4"
    android:padding="5dp"
    >

    <!-- BACKDROP THUMBNAIL -->c
    <ImageView
        android:id="@+id/instructional_video_icon_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="TODO" />

    <!-- RECIPE TITLE -->
    <TextView
        android:id="@+id/instructional_video_icon_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/instructional_video_icon_image"
        android:layout_alignEnd="@id/instructional_video_icon_image"
        android:textStyle="bold"
        android:textSize="16sp"

        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"

        android:text="@string/instructional_video_name"
        android:textColor="#FFF"
        android:background="#9000"
        >

    </TextView>


</RelativeLayout>
