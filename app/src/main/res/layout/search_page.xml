<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#e7e3d4"
        app:layout_constraintHorizontal_weight="1">

        <!-- input box -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="70dp"
            android:layout_height="50dp"
            >

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint" />
        </android.support.design.widget.TextInputLayout>

        <!-- Search Icon -->
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/search_icon"
            android:contentDescription="@string/searchButton"
            android:layout_alignEnd="@id/text_input"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-60dp"/>

        <!-- FILTERS -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_input"
            android:layout_centerHorizontal="true"
            >

            <ToggleButton
                android:id="@+id/togglebutton1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/spicy_filter_grey"
                android:textOff=""
                android:textOn=""
                android:layout_margin="4dp"/>

            <ToggleButton
                android:id="@+id/togglebutton2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/vegetarian_filter_grey"
                android:textOff=""
                android:textOn=""
                android:layout_toRightOf="@id/togglebutton1"
                android:layout_margin="4dp"/>

            <ToggleButton
                android:id="@+id/togglebutton3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="90dp"
                android:background="@drawable/vegan_filter_grey"
                android:textOff=""
                android:textOn=""
                android:layout_toRightOf="@id/togglebutton2"
                android:layout_margin="4dp"/>

            <ToggleButton
                android:id="@+id/togglebutton4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/lactosefree_filter_grey"
                android:textOff=""
                android:textOn=""
                android:layout_toRightOf="@id/togglebutton3"
                android:layout_margin="4dp"/>

            <ToggleButton
                android:id="@+id/togglebutton5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/nutfree_filter_grey"
                android:textOff=""
                android:textOn=""
                android:layout_toRightOf="@id/togglebutton4"
                android:layout_margin="4dp"/>

            <ToggleButton
                android:id="@+id/togglebutton6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/glutenfree_filter_grey"
                android:textOff=""
                android:textOn=""
                android:layout_toRightOf="@id/togglebutton5"
                android:layout_margin="4dp"/>

        </RelativeLayout>
        
    </RelativeLayout>




   <android.support.v7.widget.RecyclerView
       android:id="@+id/constraintLayout2"
       android:layout_width="wrap_content"
       android:layout_height="350dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

   </android.support.v7.widget.RecyclerView>





</android.support.constraint.ConstraintLayout>