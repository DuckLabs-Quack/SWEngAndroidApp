<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_weight=".4"
    android:padding="5dp"
    >
    <!-- BACKDROP THUMBNAIL -->
    <ImageView
        android:id="@+id/recipe_icon_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/thumbnail" />

    <!-- RECIPE TITLE -->
    <TextView
        android:id="@+id/recipe_icon_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/recipe_icon_image"
        android:layout_alignEnd="@id/recipe_icon_image"
        android:textStyle="bold"
        android:textSize="16sp"

        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"

        android:text="RECIPE NAME"
        android:textColor="#FFF"
        android:background="#9000"
        >


    </TextView>

    <!-- FAVOURITES -->
    <TextView
        android:id="@+id/recipe_icon_numfavourites"
        android:gravity="bottom"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/heart_off"
        android:text="0"
        android:textColor="#FFF"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="2dp"
        android:drawablePadding="2dp"
        android:layout_margin="5dp"
        android:layout_alignBottom="@id/recipe_icon_image"
        android:layout_alignEnd="@id/recipe_icon_image"
        android:background="#9000"
        />


    <!-- TIME -->
    <TextView
        android:id="@+id/recipe_icon_time"
        android:textSize="14sp"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/timer"
        android:text="0 mins"
        android:textColor="#FFF"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="2dp"
        android:drawablePadding="2dp"
        android:layout_margin="5dp"
        android:layout_alignBottom="@id/recipe_icon_image"
        android:layout_alignStart="@id/recipe_icon_image"
        android:background="#9000"
        />


</RelativeLayout>
