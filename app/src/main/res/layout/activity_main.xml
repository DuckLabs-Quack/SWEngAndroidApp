<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group3.swengandroidapp.MainActivity">

    <!--Menu Bar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" >

        <!--Display logo on menu bar-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toolbar Title"
            android:src="@drawable/hands_off_logo"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="405dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="125dp">

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Save To Favourites"
            android:textOn="Added"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="213dp" />

        <Button
            android:id="@+id/view_favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Favourites"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="280dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
